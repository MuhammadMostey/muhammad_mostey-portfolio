            <div class="skillslist">
                <div> <Icon name="microsoftoffice" width="24" height="24" class="inline mr-0.5" /> Microsoft Office </div>
                <div> <Icon name="microsoft-dynamics-365" width="24" height="24" class="inline mr-0.5" /> Microsoft Dynamics 365 ERP </div>
                <div> <Icon name="microsoft-power-bi" width="24" height="24" class="inline mr-0.5" /> Power BI </div>
            </div>
        </Card>

        <Card id="skillCard">
            <span slot="title"> Design and Editing </span>
            <div class="skillslist">
                <div> <Icon name="photoshop" width="24" height="24" class="inline mr-0.5" /> Adobe Photoshop </div>
                <div> <Icon name="premiere" width="24" height="24" class="inline mr-0.5" /> Adobe Premiere </div>
            </div>
        </Card>

        <Card id="skillCard">
            <span slot="title"> Skills </span>
            <div class="skillslist">
                <div> <Icon name="arrows-expand" width="24" height="24" class="inline mr-0.5" /> Problem Solving </div>
                <div> <Icon name="arrows-expand" width="24" height="24" class="inline mr-0.5" /> Information Technology </div>
                <div> <Icon name="arrows-expand" width="24" height="24" class="inline mr-0.5" /> Finance & Accounting </div>
                <div> <Icon name="arrows-expand" width="24" height="24" class="inline mr-0.5" /> Project Management </div>
                <div> <Icon name="arrows-expand" width="24" height="24" class="inline mr-0.5" /> Administration </div>
                <div> <Icon name="arrows-expand" width="24" height="24" class="inline mr-0.5" /> Customer Service </div>
            </div>
        </Card>

        <Card id="skillCard">
            <span slot="title"> Languages </span>
            <div class="skillslist">
                <div> <Icon name="us" width="24" height="24" class="inline mr-0.5" /> English </div>
                <div> <Icon name="de" width="24" height="24" class="inline mr-0.5" /> German </div>
                <div> <Icon name="sy" width="24" height="24" class="inline mr-0.5" /> Arabic </div>
                <div> <Icon name="fr" width="24" height="24" class="inline mr-0.5" /> French </div>
